
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  READY
  COMPLETED
  CANCELLED
}

model User {
  id         Int      @id @default(autoincrement())
  telegramId BigInt   @unique
  username   String?
  fullName   String?
  role       Role     @default(USER)
  orders     Order[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  quantity  Int      @default(0)
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}

model Faculty {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("faculties")
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  productId Int
  product   Product     @relation(fields: [productId], references: [id])
  facultyId Int
  faculty   Faculty     @relation(fields: [facultyId], references: [id])
  comment   String?
  wanted    Int         // So'ralgan miqdor
  given     Int         // Berilgan miqdor
  missing   Int         // Yetmagan miqdor
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("orders")
}

model Settings {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}